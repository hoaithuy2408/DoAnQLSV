<!DOCTYPE html>

<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống sinh viên - NTU</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Load jQuery trước -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- Load jQuery Validate sau khi jQuery đã có -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <style>
        body {
            background: white;
            background-size: cover;
            padding: 0px 40px;
        }

        .header {
            background: #00539C;
            color: white;
            padding: 20px;
        }

        .logo img {
            max-height: 60px;
        }

        .nav-info {
            font-size: 14px;
            text-align: right;
        }

        .module-box {
            text-align: center;
            background: #e0ecf8;
            border: 1px solid #c0c0c0;
            border-radius: 5px;
            padding: 15px;
            transition: 0.3s;
        }

            .module-box:hover {
                background: #d0e0f0;
                transform: translateY(-3px);
            }

            .module-box img {
                height: 64px;
            }

        .footer {
            background: #fff;
            padding: 10px;
            font-size: 13px;
            border-top: 2px solid #00539C;
            text-align: right;
        }
    </style>

</head>

<body>

    <!-- Header -->
    <div class="header d-flex justify-content-between align-items-center px-4">
        <div class="logo d-flex align-items-center">
            <a href="/SV/TblSinhvien/Index">
                <img src="~/assetsSV/images/Logo_NTU.png" alt="NTU logo">
            </a>
            <div class="ms-3">
                <h5 class="mb-0">TRƯỜNG ĐẠI HỌC NHA TRANG</h5>
                <small>HỆ THỐNG TÍCH HỢP THÔNG TIN</small>
            </div>
        </div>
        <div class="nav-info text-end">
            <div>Sinh viên | <strong>@User.Identity.Name</strong></div>
            <div>
                <a href="#" class="text-white" onclick="if(confirm('Bạn có chắc chắn muốn đăng xuất?')) { document.getElementById('logoutForm').submit(); }">
                    <img style="max-height: 40px; padding-top: 10px" src="~/assetsSV/images/logout.png" />
                </a>

                    <form id="logoutForm" asp-area="SV" asp-controller="TblSinhvien" asp-action="LogoutSV" method="post" style="display:none">
                        @Html.AntiForgeryToken()
                    </form>

                <a href="/SV/TblSinhvien/Index" class="text-white">
                    <img style="max-height: 40px; padding-top: 10px; padding-left: 10px" src="~/assetsSV/images/home.png" />
                </a>
            </div>
           
        </div>
    </div>

    <!-- Sub-header -->
    <div class="bg-light text-dark px-4 py-2">
        Hệ: Đại học và Cao đẳng chính quy | NH: 2024-2025 | HK: 2
    </div>

    <!-- Main grid -->
    <div class="container py-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="footer px-4">
        Thiết kế 2016-2025 bởi CUSC
    </div>
   
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
