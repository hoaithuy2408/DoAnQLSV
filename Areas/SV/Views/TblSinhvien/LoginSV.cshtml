@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- stylesheet -->
<link href="~/assets/css/styles.min.css" rel="stylesheet" />
<link href="~/assets/libs/bootstrap/dist/css/bootstrap.min.css" />
<!-- CSS -->
<style>
    /* Container chính */
    .login-container {
        width: 100%;
        max-width: 400px;
        border: 1px solid #1E88E5;
        padding: 15px;
        border-radius: 8px;
        background: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề đăng nhập */
    .login-title {
        padding-top: 20px;
        font-size: 1.5rem;
        font-weight: bold;
        color: #004aad;
        margin-bottom: 1rem;
        text-align: center;
    }

    /* Input với hiệu ứng floating label */
    .form-floating-label {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-floating-label input {
            width: 100%;
            padding: 12px 16px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            background: transparent;
            outline: none;
            transition: all 0.2s ease-in-out;
        }

        .form-floating-label label {
            position: absolute;
            top: 50%;
            left: 16px;
            transform: translateY(-50%);
            padding: 0 4px;
            font-size: 1rem;
            color: #aaa;
            pointer-events: none;
            transition: all 0.2s ease-in-out;
        }

        /* Khi input có focus hoặc có giá trị, label di chuyển lên trên */
        .form-floating-label input:focus {
            border-color: #1E88E5;
        }

            .form-floating-label input:focus + label,
            .form-floating-label input:not(:placeholder-shown) + label {
                top: -8px;
                transform: translateY(0) scale(0.85);
                background-color: #f9f9f9;
                color: #1E88E5;
            }

    /* Ô nhập có icon bên phải */
    .input-group {
        position: relative;
    }

        .input-group .input-group-text {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #1E88E5;
        }

            .input-group .input-group-text:hover {
                color: #64B5F6;
            }

    /* Nút đăng nhập */
    button {
        background-color: #004aad; /* Xanh coban */
        border-color: #0C2A53;
        color: #fff;
        font-weight: bold;
        padding: 12px;
        width: 100%;
        border-radius: 20px; /* 🔹 Bo tròn nhiều hơn */
        transition: 0.3s;
        font-size: 1rem;
        cursor: pointer;
    }

        button:hover {
            background-color: #143865; /* Xanh nhạt hơn khi hover */
            border-color: #143865;
        }


    /* Link quên mật khẩu hoặc đăng ký */
    .text-center a {
        color: #1E88E5;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
    }

        .text-center a:hover {
            color: #64B5F6;
            text-decoration: underline;
        }
</style>


<!-- Login Form -->
<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="login-container">
        <h2 class="login-title text-center">Đăng nhập Sinh viên</h2>

        @if (ViewData.ModelState[""]?.Errors.Count > 0)
        {
            <div class="alert alert-danger validation-summary">
                @Html.ValidationSummary(true, "", new { @class = "mb-0" })
            </div>
        }
        <form asp-area="SV" asp-controller="TblSinhvien" asp-action="LoginSV" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="form-floating-label">
                <input type="text" id="username" name="username" placeholder=" " required />
                <label for="username">Tên đăng nhập</label>
                <div class="invalid-feedback">
                    Vui lòng nhập tên đăng nhập.
                </div>
            </div>
            <div class="form-floating-label input-group">
                <input type="password" id="password" name="password" placeholder=" " required />
                <label for="password">Mật khẩu</label>
                <span class="input-group-text" id="togglePassword">
                    <i class="fas fa-eye"></i>
                </span>
                <div class="invalid-feedback">
                    Vui lòng nhập mật khẩu.
                </div>
            </div>
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            @* <!-- Google reCAPTCHA --> *@
            @* <div class="g-recaptcha mb-3 w-100" data-sitekey="@ViewBag.SiteKey" data-callback="verifyCaptcha"></div> *@
            @* <!-- Thêm trường để lưu trữ giá trị reCAPTCHA --> *@
            @* <input type="hidden" id="recaptchaResponse" name="g-recaptcha-response" /> *@

            <button type="submit" class="w-100">Đăng nhập</button>
        </form>

        <div class="text-center mt-3">
            <a href="/SV/TblSinhvien/ForgotPasswordSV">Quên mật khẩu?</a>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script>
    // Bootstrap validation
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();

    // Show/Hide Password
    const togglePassword = document.querySelector('#togglePassword');
    const passwordField = document.querySelector('#password');

    togglePassword.addEventListener('click', () => {
        const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordField.setAttribute('type', type);

        // Toggle icon
        togglePassword.innerHTML =
            type === 'password'
                ? '<i class="fas fa-eye"></i>'
                : '<i class="fas fa-eye-slash"></i>';
    });

</script>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
<script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
