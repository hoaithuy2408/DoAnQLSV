@model QLSV.Models.Khht

@{
    ViewData["Title"] = "Thêm Kế hoạch học tập";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var successMessage = TempData["SuccessMessage"] as string;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">Thêm Kế hoạch học tập</h5>
                        <a asp-action="Index" class="btn btn-light btn-sm"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                            @successMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                            @errorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form asp-action="Create">
                        @Html.AntiForgeryToken()
                        <div class="row gy-3">
                            <div class="col-md-6">
                                <label asp-for="MaKhht" class="form-label fw-medium">Mã KHHT</label>
                                <input asp-for="MaKhht" class="form-control" />
                                <span asp-validation-for="MaKhht" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TenKhht" class="form-label fw-medium">Tên KHHT</label>
                                <input asp-for="TenKhht" class="form-control" />
                                <span asp-validation-for="TenKhht" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SoTctong" class="form-label fw-medium">Tổng số TC</label>
                                <input asp-for="SoTctong" class="form-control" />
                                <span asp-validation-for="SoTctong" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SoTctuChon" class="form-label fw-medium">TC tự chọn</label>
                                <input asp-for="SoTctuChon" class="form-control" />
                                <span asp-validation-for="SoTctuChon" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SoTcbatBuoc" class="form-label fw-medium">TC bắt buộc</label>
                                <input asp-for="SoTcbatBuoc" class="form-control" />
                                <span asp-validation-for="SoTcbatBuoc" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaCtdt" class="form-label fw-medium">CTĐT</label>
                                <select asp-for="MaCtdt" class="form-select" asp-items="ViewBag.MaCtdt">
                                    <option value="">-- Chọn CTĐT --</option>
                                </select>
                                <span asp-validation-for="MaCtdt" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaNk" class="form-label fw-medium">Niên khóa</label>
                                <select asp-for="MaNk" class="form-select" asp-items="ViewBag.MaNk">
                                    <option value="">-- Chọn niên khóa --</option>
                                </select>
                                <span asp-validation-for="MaNk" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaNh" class="form-label fw-medium">Năm học</label>
                                <select asp-for="MaNh" class="form-select" asp-items="ViewBag.MaNh">
                                    <option value="">-- Chọn năm học --</option>
                                </select>
                                <span asp-validation-for="MaNh" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaHk" class="form-label fw-medium">Học kỳ</label>
                                <select asp-for="MaHk" class="form-select" asp-items="ViewBag.MaHk">
                                    <option value="">-- Chọn học kỳ --</option>
                                </select>
                                <span asp-validation-for="MaHk" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save-fill me-1"></i> Thêm mới
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
