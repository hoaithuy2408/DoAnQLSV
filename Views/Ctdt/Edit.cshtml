@model QLSV.Models.Ctdt

@{
    ViewData["Title"] = "Chỉnh sửa Chương trình đào tạo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">CHỈNH SỬA CHƯƠNG TRÌNH ĐÀO TẠO</h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="MaCtdt" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MaCtdt" class="form-label fw-medium">Mã CTĐT</label>
                                    <input asp-for="MaCtdt" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HinhThucDt" class="form-label fw-medium">Hình thức đào tạo</label>
                                    <select asp-for="HinhThucDt" class="form-select">
                                        <option value="true">Chính quy</option>
                                        <option value="false">Liên thông</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TenCtdt" class="form-label fw-medium">Tên CTĐT</label>
                                    <input asp-for="TenCtdt" class="form-control" />
                                    <span asp-validation-for="TenCtdt" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TongSoTc" class="form-label fw-medium">Tổng số tín chỉ</label>
                                    <input asp-for="TongSoTc" class="form-control" />
                                    <span asp-validation-for="TongSoTc" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MaKhoa" class="form-label fw-medium">Khoa</label>
                                    <select asp-for="MaKhoa" class="form-select" asp-items="ViewBag.MaKhoa"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MaNganh" class="form-label fw-medium">Ngành</label>
                                    <select asp-for="MaNganh" class="form-select" asp-items="ViewBag.MaNganh"></select>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save-fill me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
