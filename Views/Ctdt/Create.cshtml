@model QLSV.Models.Ctdt

@{
    ViewData["Title"] = "Thêm Chương trình đào tạo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var successMessage = TempData["SuccessMessage"] as string;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">Thêm mới Chương trình đào tạo</h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                            @successMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                            @errorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="Ctdt" asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="MaCtdt" class="form-label">Mã CTĐT</label>
                            <input asp-for="MaCtdt" class="form-control" />
                            <span asp-validation-for="MaCtdt" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenCtdt" class="form-label">Tên CTĐT</label>
                            <input asp-for="TenCtdt" class="form-control" />
                            <span asp-validation-for="TenCtdt" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HinhThucDt" class="form-label">Hình thức đào tạo</label>
                            <select asp-for="HinhThucDt" class="form-select">
                                <option value="true">Chính quy</option>
                                <option value="false">Liên thông</option>
                            </select>
                            <span asp-validation-for="HinhThucDt" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TongSoTc" class="form-label">Tổng số tín chỉ</label>
                            <input asp-for="TongSoTc" class="form-control" />
                            <span asp-validation-for="TongSoTc" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MaKhoa" class="form-label">Khoa</label>
                            <select asp-for="MaKhoa" class="form-select" asp-items="ViewBag.MaKhoa">
                                <option value="">-- Chọn khoa --</option>
                            </select>
                            <span asp-validation-for="MaKhoa" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Thêm mới
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
