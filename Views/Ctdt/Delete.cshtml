@model QLSV.Models.Ctdt

@{
    ViewData["Title"] = "Xóa Chương trình đào tạo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">XÓA CHƯƠNG TRÌNH ĐÀO TẠO</h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.DeleteError != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            @ViewBag.DeleteError
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger mb-4">
                            <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Cảnh báo</h5>
                            <p class="mb-0">Bạn có chắc chắn muốn xóa chương trình đào tạo này không? Thao tác này không thể hoàn tác.</p>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Mã CTĐT</label>
                            <div class="form-control bg-light">@Html.DisplayFor(m => m.MaCtdt)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Tên CTĐT</label>
                            <div class="form-control bg-light">@Html.DisplayFor(m => m.TenCtdt)</div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Khoa</label>
                            <div class="form-control bg-light">@Html.DisplayFor(m => m.MaKhoaNavigation.TenKhoa)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Hình thức đào tạo</label>
                            <div class="form-control bg-light">@(Model.HinhThucDt ? "Chính quy" : "Liên thông")</div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-between mt-4">
                        <input type="hidden" asp-for="MaCtdt" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill me-1"></i> Xác nhận xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
