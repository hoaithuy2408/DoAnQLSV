@model QLSV.Models.Giangvien

@{
    ViewData["Title"] = "Chi tiết Giảng viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">CHI TIẾT GIẢNG VIÊN</h5>
                        <a asp-action="Edit" asp-route-id="@Model.MaGv" class="btn btn-light btn-sm">
                            <i class="bi bi-pencil-square me-1"></i> Chỉnh sửa
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form>
                        <input type="hidden" asp-for="MaGv" />
                        <div class="row mb-4">
                            <div class="col-md-4 text-center">
                                @if (!string.IsNullOrEmpty(Model.Anh))
                                {
                                    <img src="@Model.Anh" class="rounded-circle mb-3" style="width:140px;height:140px;object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="avatar-placeholder rounded-circle d-inline-flex align-items-center justify-content-center bg-light text-muted mb-3" style="width:140px;height:140px;">
                                        <i class="bi bi-person fs-1"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <div class="row gy-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Họ và tên</label>
                                        <input asp-for="HoTen" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Bộ môn</label>
                                        <input class="form-control" value="@Model.MaBmNavigation?.TenBm" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Giới tính</label>
                                        <input class="form-control" value="@(Model.GioiTinh ? "Nam" : "Nữ")" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Ngày sinh</label>
                                        <input class="form-control" value="@Model.NgaySinh.ToString("dd/MM/yyyy")" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Quê quán</label>
                                        <input asp-for="QueQuan" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Số điện thoại</label>
                                        <input asp-for="Sdt" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium">Tên đăng nhập</label>
                                        <input asp-for="TenDn" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light py-3 text-end">
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-placeholder {
        border: 3px dashed #dee2e6;
    }
</style>
