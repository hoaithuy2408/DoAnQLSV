@model QLSV.Models.Giangvien

@{
    ViewData["Title"] = "Xóa Giảng viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">XÓA GIẢNG VIÊN</h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger mb-4">
                        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Cảnh báo</h5>
                        <p class="mb-0">Bạn có chắc chắn muốn xóa giảng viên này không? Thao tác này không thể hoàn tác.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Họ và tên</label>
                            <div class="form-control bg-light">@Html.DisplayFor(m => m.HoTen)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Email</label>
                            <div class="form-control bg-light">@Html.DisplayFor(m => m.Email)</div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Số điện thoại</label>
                            <div class="form-control bg-light">@Html.DisplayFor(m => m.Sdt)</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-medium">Ngày sinh</label>
                            <div class="form-control bg-light">@Html.DisplayFor(m => m.NgaySinh)</div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium">Bộ môn</label>
                        <div class="form-control bg-light">@Html.DisplayFor(m => m.MaBmNavigation.TenBm)</div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-between mt-4" asp-route-id="@Model.MaGv">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill me-1"></i> Xác nhận xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
