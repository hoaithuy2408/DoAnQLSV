@model QLSV.Models.Bomon

@{
    ViewData["Title"] = "Chi tiết Bộ môn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">CHI TIẾT BỘ MÔN</h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Mã Bộ môn</label>
                                <div class="form-control bg-light">@Html.DisplayFor(model => model.MaBm)</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Mã Khoa</label>
                                <div class="form-control bg-light">@Html.DisplayFor(model => model.MaKhoa)</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium">Tên Bộ môn</label>
                        <div class="form-control bg-light">@Html.DisplayFor(model => model.TenBm)</div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.MaBm" class="btn btn-primary">
                            <i class="bi bi-pencil-fill me-1"></i> Chỉnh sửa
                        </a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>