@model QLSV.Models.Monhoc

@{
    ViewData["Title"] = "Xóa Môn Học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">XÓA MÔN HỌC</h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                     @if (ViewBag.DeleteError != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            @ViewBag.DeleteError
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-triangle-fill"></i> Bạn có chắc chắn muốn xóa môn học này?
                            </h5>
                            <p class="mb-0">Thao tác này không thể hoàn tác. Tất cả dữ liệu liên quan sẽ bị xóa.</p>
                        </div>
                    }
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th width="30%" class="bg-light">Tên Môn học:</th>
                                    <td>@Html.DisplayFor(m => m.TenMh)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Số Tín chỉ:</th>
                                    <td>@Html.DisplayFor(m => m.SoTc)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Bộ môn:</th>
                                    <td>@Html.DisplayFor(m => m.MaBmNavigation.TenBm)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <form asp-action="Delete" method="post" class="d-flex justify-content-between mt-4">
                        <input type="hidden" asp-for="MaMh" />

                        <button type="submit" class="btn btn-danger px-4" onclick="return confirm('Bạn có chắc chắn muốn xóa môn học này?')">
                            <i class="bi bi-trash-fill me-2"></i> Xác nhận xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>