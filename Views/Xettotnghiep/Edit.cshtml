@model QLSV.Models.Xettotnghiep

@{
    ViewData["Title"] = "Chỉnh sửa xét tốt nghiệp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">CHỈNH SỬA XÉT TỐT NGHIỆP</h5>
                        <div class="mb-4">
                            <a asp-action="DanhSachMonTheoNhom" asp-route-maCtdt="@Model.MaCtdt"  class="btn btn-light btn-sm">
                                <i class="bi-pencil-fill me-1"></i> Danh sách nhóm HP
                            </a>
                            <a asp-action="Index"  class="btn btn-light btn-sm">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        <input type="hidden" asp-for="MaCtdt" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SoTcTong" class="form-label fw-medium">Tín chỉ tổng</label>
                                <input asp-for="SoTcTong" class="form-control" />
                                <span asp-validation-for="SoTcTong" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SoTcTuChon" class="form-label fw-medium">Tín chỉ tự chọn</label>
                                <input asp-for="SoTcTuChon" class="form-control" />
                                <span asp-validation-for="SoTcTuChon" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SoTcBatBuoc" class="form-label fw-medium">Tín chỉ bắt buộc</label>
                                <input asp-for="SoTcBatBuoc" class="form-control" />
                                <span asp-validation-for="SoTcBatBuoc" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="GpatoiThieu" class="form-label fw-medium">Điểm tối thiểu</label>
                                <input asp-for="GpatoiThieu" class="form-control" />
                                <span asp-validation-for="GpatoiThieu" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save-fill me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
