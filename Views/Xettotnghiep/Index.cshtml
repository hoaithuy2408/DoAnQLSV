@model IEnumerable<QLSV.Models.Xettotnghiep>

@{
    ViewData["Title"] = "Xét tốt nghiệp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm rounded-lg border-0 mb-4">
    <div class="card-header bg-primary text-white py-3">
        <div class="d-flex justify-content-between align-items-center ">
            <h2 class="h5 mb-0 text-white">Danh sách tiêu chí xét tốt nghiệp</h2>
            <a asp-action="Create" class="btn btn-light btn-sm rounded-pill shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> Tạo mới
            </a>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="table-responsive rounded-3 shadow-sm">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>STT</th>
                        <th>CT Đào tạo</th>
                        <th>TC Tổng</th>
                        <th>TC Tự chọn</th>
                        <th>TC Bắt buộc</th>
                        <th>GP Tối thiểu</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var stt = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@stt</td>
                            <td>@item.MaCtdtNavigation?.TenCtdt</td>
                            <td>@item.SoTcTong</td>
                            <td>@item.SoTcTuChon</td>
                            <td>@item.SoTcBatBuoc</td>
                            <td>@item.GpatoiThieu</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.MaCtdt"
                                       class="btn btn-outline-primary btn-sm rounded-circle"
                                       data-bs-toggle="tooltip" title="Chỉnh sửa">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                   
                                    <a asp-action="Delete" asp-route-id="@item.MaCtdt"
                                       class="btn btn-outline-danger btn-sm rounded-circle"
                                       data-bs-toggle="tooltip" title="Xóa">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>
    </div>

   
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });
        });
    </script>
}
