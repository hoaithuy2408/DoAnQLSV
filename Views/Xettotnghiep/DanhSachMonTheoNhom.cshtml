@model List<QLSV.ViewModel.MonTheoNhomViewModel>

@{
    ViewData["Title"] = "Danh sách môn học theo nhóm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var maCtdt = ViewBag.MaCtdt as string;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">DANH SÁCH MÔN HỌC THEO NHÓM</h5>
                        <div>
                            <a asp-action="ThemNhomHocPhan"
                               asp-route-maCtdt="@maCtdt"
                               class="btn btn-success btn-sm">
                                <i class="bi bi-plus-circle me-1"></i> Thêm nhóm
                            </a>
                            <a asp-action="Index" class="btn btn-light btn-sm">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width:25%;">Nhóm học phần</th>
                                    <th style="width:20%;">Mã MH</th>
                                    <th style="width:35%;">Tên MH</th>
                                    <th style="width:10%;">Số TC</th>
                                    <th style="width:10%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var nhom in Model)
                                {
                                    <!-- Dòng tiêu đề nhóm kèm nút chỉnh sửa/xóa -->
                                    <tr class="table-secondary">
                                        <td colspan="4" class="fw-bold">
                                            @nhom.TenNhomHp (@nhom.MaNhomHp)
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center gap-2">
                                                <a asp-controller="XettotnghiepNhom"
                                                   asp-action="Edit"
                                                   asp-route-maCtdt="@maCtdt"
                                                   asp-route-maNhomHp="@nhom.MaNhomHp"
                                                   class="btn btn-outline-primary btn-sm rounded-circle"
                                                   data-bs-toggle="tooltip"
                                                   title="Chỉnh sửa">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>
                                                <a asp-controller="XettotnghiepNhom"
                                                   asp-action="Delete"
                                                   asp-route-maCtdt="@maCtdt"
                                                   asp-route-maNhomHp="@nhom.MaNhomHp"
                                                   class="btn btn-outline-danger btn-sm rounded-circle"
                                                   data-bs-toggle="tooltip"
                                                   title="Xóa">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>

                                    <!-- Các môn trong nhóm -->
                                    @foreach (var mh in nhom.MonHocs)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@mh.MaMh</td>
                                            <td>@mh.TenMh</td>
                                            <td>@mh.SoTc</td>
                                            <td></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
