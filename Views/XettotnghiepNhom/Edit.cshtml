@model QLSV.Models.XettotnghiepNhom

@{
    ViewData["Title"] = "Chỉnh sửa nhóm học phần";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-11 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">CHỈNH SỬA NHÓM HỌC PHẦN</h5>
                        <a asp-controller="Xettotnghiep"
                           asp-action="DanhSachMonTheoNhom"
                           asp-route-maCtdt="@Model.MaCtdt"
                           class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        <input asp-for="MaCtdt" type="hidden" />
                        <input asp-for="MaNhomHp" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="MaNhomHp" class="form-label fw-medium">Nhóm học phần</label>
                            <input asp-for="MaNhomHp" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SoTcTuChon" class="form-label fw-medium">Số tín chỉ tự chọn</label>
                            <input asp-for="SoTcTuChon" class="form-control" />
                            <span asp-validation-for="SoTcTuChon" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SoTcBatBuoc" class="form-label fw-medium">Số tín chỉ Bắt buộc</label>
                            <input asp-for="SoTcBatBuoc" class="form-control" />
                            <span asp-validation-for="SoTcBatBuoc" class="text-danger small"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save-fill me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
