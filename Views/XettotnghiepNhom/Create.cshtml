@model QLSV.Models.XettotnghiepNhom

@{
    ViewData["Title"] = "Thêm nhóm học phần";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-white">THÊM NHÓM HỌC PHẦN</h5>
                        <a asp-action="Index" asp-route-maCtdt="@Model.MaCtdt" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                       
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-3">
                            <label asp-for="MaCtdt" class="form-label fw-medium">Chương trình đào tạo</label>
                            <select asp-for="MaCtdt" class="form-select" asp-items="@(ViewBag.AllCtdt as SelectList)">
                                <option value="">-- Chọn CTĐT --</option>
                            </select>
                            <span asp-validation-for="MaCtdt" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaNhomHp" class="form-label fw-medium">Nhóm học phần</label>
                            <select asp-for="MaNhomHp" class="form-select" asp-items="@(ViewBag.AllNhomHp as SelectList)">
                                <option value="">-- Chọn nhóm học phần --</option>
                            </select>
                            <span asp-validation-for="MaNhomHp" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SoTcBatBuoc" class="form-label fw-medium">Số tín chỉ bắt buộc</label>
                            <input asp-for="SoTcBatBuoc" class="form-control" />
                            <span asp-validation-for="SoTcBatBuoc" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SoTcTuChon" class="form-label fw-medium">Số tín chỉ tự chọn</label>
                            <input asp-for="SoTcTuChon" class="form-control" />
                            <span asp-validation-for="SoTcTuChon" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save-fill me-1"></i> Lưu lại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
